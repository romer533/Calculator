<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:layout_marginRight="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/col4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/col3"
            app:layout_constraintTop_toTopOf="parent">


            <Button
                android:id="@+id/button_divided"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="/"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_orange"
                app:cornerRadius="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_times"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="X"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_orange"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_divided"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="-"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_orange"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_times"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_orange"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_minus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_equls"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="="
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_orange"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_plus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/col3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/col4"
            app:layout_constraintStart_toEndOf="@id/col2"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_percent"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_light_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/button_number_9"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="9"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_percent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/button_number_6"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="6"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_number_9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/button_number_3"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="3"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_number_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/button_comma"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text=","
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                android:layout_marginTop="@dimen/button_margin_top"
                app:layout_constraintTop_toBottomOf="@id/button_number_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toStartOf="@id/col3"
            app:layout_constraintStart_toEndOf="@id/col1"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_plus_minus"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_light_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_number_8"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="8"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_plus_minus" />


            <Button
                android:id="@+id/button_number_5"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="5"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_number_8" />

            <Button
                android:id="@+id/button_number_2"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="2"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_number_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintEnd_toStartOf="@id/col2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_ac"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_light_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_number_7"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="7"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_ac" />


            <Button
                android:id="@+id/button_number_4"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="4"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_number_7" />

            <Button
                android:id="@+id/button_number_1"
                android:layout_width="@dimen/circle_button_size"
                android:layout_height="@dimen/circle_button_size"
                android:layout_marginTop="@dimen/button_margin_top"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="1"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_number_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_for_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/col2"
            app:layout_constraintStart_toStartOf="@id/col1"
            app:layout_constraintTop_toBottomOf="@id/col2">

            <Button
                android:id="@+id/button_number_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/circle_button_size"
                android:gravity="center_vertical"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="25dp"
                android:text="0"
                android:textSize="@dimen/button_text_size"
                app:backgroundTint="@color/button_color_dark_gray"
                app:cornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>